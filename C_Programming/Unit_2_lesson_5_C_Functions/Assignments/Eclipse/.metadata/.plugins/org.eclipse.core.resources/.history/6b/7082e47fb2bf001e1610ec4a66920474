/*
 * C program to Calculate the Power of a Number Using Recursion
 */

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void reversestr(char*str,int len)
{
	if(len>=0)
	{
		printf("%c",str[len]);
		reversestr(str,len-1);
	}
}


int main()
{
	char num,power;
	printf("##########Console-output##########\n");
	printf("Enter the base number:");
	fflush(stdin);         fflush(stdout);
	scanf("%d",&num);
	printf("Enter the power number(positive nterger):");
	fflush(stdin);         fflush(stdout);
	scanf("%d",&power);
